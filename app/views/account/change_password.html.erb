<% content_for :header do %>
	<h2>Account</h2>
	<%= link_to 'Back', "/" %>
<% end %>

<div class="account-div">
	  <% if @user.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

	      <ul>
	      <% @user.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	<h1>Change your password</h1> 
	<%= form_tag("/account/change_password", :method=>"POST") do %>
		<h3>ENTER YOUR <strong>CURRENT</strong> PASSWORD</h3>
	    <%= password_field_tag :existing_password %>
		<h3>ENTER A <strong>NEW</strong> PASSWORD</h3>
	    <%= password_field_tag :new_password %>
		<h3>TYPE YOUR NEW PASSWORD <strong>AGAIN</strong></h3>
	    <%= password_field_tag :new_password_confirmation %>
	    <h3>&nbsp;</h3>
	    <%= submit_tag("Save my new password", :class => "btn btn-large btn-block btn-info") %>
	<% end %>
</div>
